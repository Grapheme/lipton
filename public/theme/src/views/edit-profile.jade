			ul.top-menu
				li
					a(href="#") Чайная коллекция
				li
					a(href="#") Мир чая
				li
					a(href="#") Goodstarter
	.main-content.sub-page
		.block
			.content
				.participate-block
					h2 Редактирование профиля
					.forms-holder.full-registration-holder
						form.profile-edit(name="profile-edit")
							.accept-block-holder
								.profile-info
									.avatar(style="background-image: url(http://placehold.it/80x80);")
									a(href="#") Сменить аватар
									input(name="avatar")

							.form-block-left
								p.field-title.required Фамилия
								input(name="surname" for="profile-edit" autocomplete="off")

								p.field-title.required Имя
								input(name="name" for="profile-edit" autocomplete="off")

								p.field-title Пол
								select#sex(name="sex" for="profile-edit")
									option(value="0") Не указан
									option(value="male") Мужской
									option(value="female") Женский

							.devider.no-dots

							.form-block-right
								p.field-title.required Email
								input(name="email" for="profile-edit" autocomplete="off")

								p.field-title.required Телефон
								input(name="phone" for="profile-edit" autocomplete="off")

								p.field-title Дата рождения
								.birthday
									input.dd(name="dd" placeholder="ДД" for="profile-edit" autocomplete="off")
									input.mm(name="mm" placeholder="ММ" for="profile-edit" autocomplete="off")
									input.yyyy(name="yyyy" placeholder="ГГГГ" for="profile-edit" autocomplete="off")

							button(type="submit") Сохранить
