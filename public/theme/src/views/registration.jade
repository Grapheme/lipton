extends templates/layout

block content
	.block.second-code
		.second-code-hack
		form(class="promo-code promo-code-2" name="promo-code-2")
			h3 Есть еще один промо-код?
			.fields-holder 
				input(type="text" for="promo-code-2" autocomplete="off")
				button(disabled="disabled") Отправить
				a(href="#") Отмена

	.block.header
		.partners-block
			.partner-traveller
			.partner-lingualeo

		.content
			a.logo-main(href="/")

		.icons-block
			a.ico-account(href="#")
			.ico-burger(href="#")
		.right-menu-holder
			ul.right-menu
				li
					a(href="#") Правила акции
				li
					a(href="#") FAQ
				li
					a(href="#") Галерея призов
				li
					a(href="#") Победители

	.block.menu-holder
		.content
			ul.top-menu
				li
					a(href="#") Чайная коллекция
				li
					a(href="#") Мир чая
				li
					a(href="#") Goodstarter
	.main-content.sub-page
		.block
			.content
				.participate-block
					h2 Принять участие
					.forms-holder.full-registration-holder
						form.full-registration(name="full-registration-form")
							.form-block-left
								p.field-title.required Фамилия
								input(name="surname" for="full-registration-form" autocomplete="off")

								p.field-title.required Имя
								input(name="name" for="full-registration-form" autocomplete="off")

								p.field-title Пол
								select#sex(name="sex" for="full-registration-form")
									option(value="0") Не указан
									option(value="male") Мужской
									option(value="female") Женский

							.devider.no-dots

							.form-block-right
								p.field-title.required Email
								input(name="email" for="full-registration-form" autocomplete="off")

								p.field-title.required Телефон
								input(name="phone" for="full-registration-form" autocomplete="off")

								p.field-title Дата рождения
								.birthday
									input.dd(name="dd" placeholder="ДД" for="full-registration-form" autocomplete="off")
									input.mm(name="mm" placeholder="ММ" for="full-registration-form" autocomplete="off")
									input.yyyy(name="yyyy" placeholder="ГГГГ" for="full-registration-form" autocomplete="off")

							.accept-block-holder
								label(for="accept") .
								input#accept(name="acceptCheckbox" type="checkbox")
								p Я согласен с <a href="#">правилами акции</a>, ознакомился с <a href="#">условиями использования</a> предоставленных<br>мной сведений и выражаю свое согласие на их использование
							
							button Отправить
	.block.sub-footer-holder
		.sub-footer
			.copyright
				p ООО «ЮНИЛЕВЕР РУСЬ». ЮРИДИЧЕСКИЙ И ПОЧТОВЫЙ АДРЕС: 123022, Г. МОСКВА, УЛ. СЕРГЕЯ МАКЕЕВА, Д. 13. 
				p ЭЛЕКТРОННАЯ ПОЧТА: 
					a(href="mailto:COMMUNICATIONS.RUSSIA@UNILEVER.COM") COMMUNICATIONS.RUSSIA@UNILEVER.COM

			ul.sharing-block
				li
					a(href="#") Полные правила акции
				li
					a(href="/feedback.html") Обратная связь
				li 
					span Рассказать друзьям
						
						a.soc.ok(href="#")
						a.soc.vk(href="#")
						a.soc.fb(href="#")

		.footer-decor-left
		.footer-decor-right
				
